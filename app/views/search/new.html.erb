<h1>Courses Seach</h1>
<div class="row well">
    <%= form_for(:search, url: search_path, :html => {:id => "search_bar",:class => 'navbar-form navbar-center',:style => 'text-align: center;',method: :get}) do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Search',value: @course_name%>
      </div>
      <div class="form-group">
        <%= f.select :subject, options_for_select(@subjects, :selected => @subject_name),{}, {:class => "form-control"}%>
      </div>
    <% end %>
</div>
<div id="search_results">
<%= render 'form', courses: @courses,states: @states %>
<div class="center">
<%= will_paginate @courses, remote: true, renderer: BootstrapPagination::Rails%>
</div>
</div>
