<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <%= gravatar_for @user %>
                    </div>
                    <div class="col-sm-6 col-md-8">
                        <h4>
                          <%= @user.firstname %>
                          <%= @user.lastname %>
                        </h4>
                        <i class="glyphicon glyphicon-envelope"></i>  <%= @user.account %><br/><br/>
                        <button type="button" class="btn btn-primary">Reset Password</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Independent study</th>
    </tr>
  </thead>

  <tbody>
    <% registered_courses.each do |course| %>
      <tr>
        <td><%= course.code %></td>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.independent_study %></td>
      </tr>
    <% end %>
  </tbody>
</table>
